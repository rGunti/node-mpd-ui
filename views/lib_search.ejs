<div class="container collapse in" id="collapseSearchForm">
    <form id="librarySearchForm">
        <div class="form-group label-floating">
            <label class="control-label" for="librarySearchTitle">Title</label>
            <input type="text" name="title" id="librarySearchTitle" class="form-control" autocomplete="off">
        </div>
        <div class="form-group label-floating">
            <label class="control-label" for="librarySearchArtist">Artist</label>
            <input type="text" name="artist" id="librarySearchArtist" class="form-control" autocomplete="off">
        </div>
        <div class="form-group label-floating">
            <label class="control-label" for="librarySearchAlbum">Album</label>
            <input type="text" name="album" id="librarySearchAlbum" class="form-control" autocomplete="off">
        </div>
        <div class="form-group label-floating">
            <label class="control-label" for="librarySearchGenre">Genre</label>
            <input type="text" name="genre" id="librarySearchGenre" class="form-control" autocomplete="off">
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">
                <img class="loading" src="/img/loading32_colored.gif">
                <i class="material-icons">search</i>
                Search
            </button>
        </div>
    </form>
</div>

<div class="container collapse" id="collapseSearchResult">
    <div class="text-center">
        <button class="btn btn-sm" id="searchAgainButton">
            <i class="material-icons">search</i>
            Search Again
        </button>
    </div>
    <div class="list-group" id="searchResultRenderTarget"></div>
    <div class="list-group hidden" id="searchResultRenderTargetTemplates">
        <button type="button" class="list-group-item" id="searchResultItemTemplate">
            <div class="row">
                <div class="col-xs-8">
                    <span class="result-title">{{title}}</span><br>
                    <span class="result-artist">{{artist}}</span>
                </div>
                <div class="col-xs-4 text-right">
                    <span class="result-length">00:00</span>
                </div>
            </div>
        </button>
    </div>
</div>

<script src="/js/custom/lib_search.js"></script>
