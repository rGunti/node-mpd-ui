<div class="container">
    <!-- Album Cover -->
    <!--<div class="row center-align">
        <img src="/public/img/unknown-album.png">
    </div>-->

    <!-- Title -->
    <div class="row">
        <div class="col s12 center-align">
            <span id="currentTitle">{{title}}</span>
        </div>
    </div>

    <!-- Artist / Album -->
    <div class="row">
        <div class="col s12 center-align">
            <span id="currentArtist">{{artist}}</span>
            &ndash;
            <span id="currentAlbum">{{album}}</span>
        </div>
    </div>

    <!-- Timestamp -->
    <div class="row">
        <div class="col s6 left-align">
            <span id="currentTimestamp">00:00:00</span>
        </div>
        <div class="col s6 right-align">
            <span id="currentSongLength">00:00:00</span>
        </div>
    </div>
    <div class="row">
        <div class="progress">
            <div class="determinate indigo"
                 id="timestampProgressBar"
                 style="width: 0%"></div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="row center-align">
        <button id="previousSongButton" class="btn waves-effect waves-light indigo">
            <i class="material-icons">skip_previous</i>
        </button>
        <button id="playPauseButton" class="btn waves-effect waves-light indigo">
            <i class="material-icons">play_arrow</i>
        </button>
        <button id="nextSongButton" class="btn waves-effect waves-light indigo">
            <i class="material-icons">skip_next</i>
        </button>
    </div>
    <div class="row center-align">
        <button id="repeatButton" class="btn waves-effect waves-light indigo">
            <i class="material-icons">repeat</i>
        </button>
        <button id="randomButton" class="btn waves-effect waves-light indigo">
            <i class="material-icons">shuffle</i>
        </button>
    </div>
</div>

<script src="/public/js/custom/home.js"></script>
