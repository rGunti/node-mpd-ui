<div class="center-align">
    <button class="waves-effect waves-light btn indigo queueNavigationButtons queueLoadLessButton">
        <i class="material-icons center">keyboard_arrow_up</i>
    </button>
    <button class="waves-effect waves-light btn indigo queueNavigationButtons queueReloadButton">
        <i class="material-icons left">refresh</i>
        <span class="queuePositionIndicator">0-0/0</span>
    </button>
    <button class="waves-effect waves-light btn indigo queueNavigationButtons queueLoadMoreButton">
        <i class="material-icons center">keyboard_arrow_down</i>
    </button>
</div>

<ul class="collection" id="queueRenderTarget"></ul>

<div class="center-align">
    <button class="waves-effect waves-light btn indigo queueNavigationButtons queueLoadLessButton">
        <i class="material-icons center">keyboard_arrow_up</i>
    </button>
    <button class="waves-effect waves-light btn indigo queueNavigationButtons queueReloadButton">
        <i class="material-icons left">refresh</i>
        <span class="queuePositionIndicator">0-0/0</span>
    </button>
    <button class="waves-effect waves-light btn indigo queueNavigationButtons queueLoadMoreButton">
        <i class="material-icons center">keyboard_arrow_down</i>
    </button>
</div>

<div class="fixed-action-btn toolbar">
    <a class="btn-floating btn-large indigo" href="#!">
        <i class="large material-icons">more_vert</i>
    </a>
    <ul>
        <li class="waves-effect waves-light"><a href="#!" id="createPlaylistFromQueueLink">
            <i class="material-icons">playlist_add</i>
            Queue to playlist
        </a></li>
        <li class="waves-effect waves-light"><a href="#!" id="clearQueueLink">
            <i class="material-icons">clear_all</i>
            Clear queue
        </a></li>
    </ul>
</div>

<div class="bottom-spacer">&nbsp;<br>&nbsp;<br>&nbsp;<br>&nbsp;<br></div>

<!-- Item Template -->
<ul class="collection hidden" id="queueRenderTargetTemplates">
    <li class="collection-item avatar" id="queueItemTemplate">
        <i class="circle not-i indigo result-pos">{{#}}</i>
        <span class="title result-title truncate">{{title}}</span>

        <p class="result-artist">{{artist}}</p>
        <p class="result-length">00:00</p>

        <a href="#!" class="secondary-content indigo-text result-actions">
            <i class="material-icons">more_horiz</i>
        </a>
    </li>
</ul>
<script src="/public/js/custom/queue.js"></script>
