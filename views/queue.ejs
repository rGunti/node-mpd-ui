<div class="container">
    <div class="text-center loading-indicator">
        <button type="submit" id="queueLoading" class="btn btn-primary" disabled>
            <img class="loading-shown" src="/img/loading32_colored.gif">
            Loading &hellip;
        </button>
    </div>

    <div class="container-fluid text-center">
        <button class="btn btn-primary btn-just-icon queueNavigationButtons queueLoadLessButton">
            <i class="material-icons">keyboard_arrow_up</i>
        </button>
        <button class="btn btn-primary btn-just-icon queueNavigationButtons queueReloadButton">
            <i class="material-icons">refresh</i>
            <span class="queuePositionIndicator">0-0/0</span>
        </button>
        <button class="btn btn-primary btn-just-icon queueNavigationButtons queueLoadMoreButton">
            <i class="material-icons">keyboard_arrow_down</i>
        </button>
    </div>

    <div class="list-group" id="queueRenderTarget"></div>

    <div class="container-fluid text-center">
        <button class="btn btn-primary btn-just-icon queueNavigationButtons queueLoadLessButton">
            <i class="material-icons">keyboard_arrow_up</i>
        </button>
        <button class="btn btn-primary btn-just-icon queueNavigationButtons queueReloadButton">
            <i class="material-icons">refresh</i>
            <span class="queuePositionIndicator">0-0/0</span>
        </button>
        <button class="btn btn-primary btn-just-icon queueNavigationButtons queueLoadMoreButton">
            <i class="material-icons">keyboard_arrow_down</i>
        </button>
    </div>

    <div class="container text-center">
        <!-- More Actions -->
        <div class="btn-group dropup">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                More Options
                <i class="material-icons">keyboard_arrow_up</i>
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a href="#" id="createPlaylistFromQueueLink">
                        <i class="material-icons">playlist_add</i>
                        Create playlist
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Item Template -->
    <div class="list-group hidden" id="queueRenderTargetTemplates">
        <button type="button" class="list-group-item" id="queueItemTemplate">
            <div class="row">
                <div class="col-xs-2 text-right">
                    <span class="result-pos">{{#}}</span>
                </div>
                <div class="col-xs-6">
                    <span class="result-title">{{title}}</span><br>
                    <span class="result-artist">{{artist}}</span>
                </div>
                <div class="col-xs-4 text-right">
                    <span class="result-length">00:00</span>
                </div>
            </div>
        </button>
    </div>
</div>
<script src="/js/custom/queue.js"></script>
