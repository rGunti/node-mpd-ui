<div class="container">
    <div class="text-center loading-indicator">
        <button type="submit" id="playlistLoading" class="btn btn-primary" disabled>
            <img class="loading-shown" src="/public/img/loading32_colored.gif">
            Loading &hellip;
        </button>
    </div>

    <div class="container-fluid text-center">
        <button class="btn btn-primary btn-just-icon playlistNavigationButtons playlistLoadLessButton">
            <i class="material-icons">keyboard_arrow_up</i>
        </button>
        <button class="btn btn-primary btn-just-icon playlistNavigationButtons playlistReloadButton">
            <i class="material-icons">refresh</i>
            <span class="playlistPositionIndicator">0-0/0</span>
        </button>
        <button class="btn btn-primary btn-just-icon playlistNavigationButtons playlistLoadMoreButton">
            <i class="material-icons">keyboard_arrow_down</i>
        </button>
    </div>

    <div class="list-group" id="playlistRenderTarget"></div>

    <div class="container-fluid text-center">
        <button class="btn btn-primary btn-just-icon playlistNavigationButtons playlistLoadLessButton">
            <i class="material-icons">keyboard_arrow_up</i>
        </button>
        <button class="btn btn-primary btn-just-icon playlistNavigationButtons playlistReloadButton">
            <i class="material-icons">refresh</i>
            <span class="playlistPositionIndicator">0-0/0</span>
        </button>
        <button class="btn btn-primary btn-just-icon playlistNavigationButtons playlistLoadMoreButton">
            <i class="material-icons">keyboard_arrow_down</i>
        </button>
    </div>

    <!-- Item Template -->
    <div class="list-group hidden" id="playlistRenderTargetTemplates">
        <button type="button" class="list-group-item" id="playlistItemTemplate">
            <span class="result-name">{{playlist_name}}</span>
        </button>
    </div>
</div>
<script src="/public/js/custom/playlists.js"></script>
