<input type="hidden" id="playlistName" value="<%= data %>">

<h5 class="condensed truncate"><i class="material-icons left">playlist_play</i> <%= data %></h5>

<div class="center-align">
    <button class="waves-effect waves-light btn indigo playlistNavigationButtons playlistLoadLessButton">
        <i class="material-icons center">keyboard_arrow_up</i>
    </button>
    <button class="waves-effect waves-light btn indigo playlistNavigationButtons playlistReloadButton">
        <i class="material-icons left">refresh</i>
        <span class="playlistPositionIndicator">0-0/0</span>
    </button>
    <button class="waves-effect waves-light btn indigo playlistNavigationButtons playlistLoadMoreButton">
        <i class="material-icons center">keyboard_arrow_down</i>
    </button>
</div>

<ul class="collection" id="playlistRenderTarget"></ul>

<div class="center-align">
    <button class="waves-effect waves-light btn indigo playlistNavigationButtons playlistLoadLessButton">
        <i class="material-icons center">keyboard_arrow_up</i>
    </button>
    <button class="waves-effect waves-light btn indigo playlistNavigationButtons playlistReloadButton">
        <i class="material-icons left">refresh</i>
        <span class="playlistPositionIndicator">0-0/0</span>
    </button>
    <button class="waves-effect waves-light btn indigo playlistNavigationButtons playlistLoadMoreButton">
        <i class="material-icons center">keyboard_arrow_down</i>
    </button>
</div>

<!-- Item Template -->
<ul class="collection hide" id="playlistRenderTargetTemplates">
    <li class="collection-item avatar" id="playlistItemTemplate">
        <i class="circle not-i indigo result-pos">{{#}}</i>
        <span class="title result-title truncate">{{title}}</span>

        <p class="result-artist">{{artist}}</p>
        <p class="result-length">00:00</p>

        <a href="#!" class="secondary-content indigo-text result-actions">
            <i class="material-icons center">more_horiz</i>
        </a>
    </li>
</ul>

<script src="/public/js/custom/playlist_editor.js"></script>
