<ul class="collapsible" data-collapsible="accordion">
    <li>
        <div class="collapsible-header" id="browserArtistHeader" data-library-filter="artists">
            <i class="material-icons">person</i> Artist
        </div>
        <div class="collapsible-body">
            <div class="collection" id="browserArtistRenderTarget">
            </div>
        </div>
    </li>
    <li>
        <div class="collapsible-header" id="browserAlbumHeader" data-library-filter="albums">
            <i class="material-icons">album</i> Album
        </div>
        <div class="collapsible-body">
            <div class="collection" id="browserAlbumRenderTarget">
            </div>
        </div>
    </li>
    <li>
        <div class="collapsible-header" id="browserGenreHeader" data-library-filter="genres">
            <i class="material-icons">music_note</i> Genre
        </div>
        <div class="collapsible-body">
            <div class="collection" id="browserGenreRenderTarget">
            </div>
        </div>
    </li>
</ul>

<div class="collection hidden">
    <a href="#!" class="collection-item" id="browserArtistTemplate">
        <i class="material-icons left">person</i>
        <span class="result-artist">{{artist}}</span>
    </a>
    <a href="#!" class="collection-item" id="browserAlbumTemplate">
        <i class="material-icons left">album</i>
        <span class="result-album">{{album}}</span>
    </a>
    <a href="#!" class="collection-item" id="browserGenreTemplate">
        <i class="material-icons left">music_note</i>
        <span class="result-genre">{{genre}}</span>
    </a>
</div>

<div class="bottom-spacer">&nbsp;<br>&nbsp;<br>&nbsp;<br>&nbsp;<br></div>

<div class="fixed-action-btn">
    <a href="#!" id="scrollToTop" class="btn-floating btn-large waves-effect waves-light indigo z-depth-3">
        <i class="material-icons">arrow_upward</i>
    </a>
</div>

<!-- (New) Song Browser -->
<div id="songBrowserModal" class="modal modal-fixed-footer bottom-sheet">
    <div class="modal-content">
        <h4>
            <i class="material-icons left header-icon-artist">person</i>
            <i class="material-icons left header-icon-album">album</i>
            <i class="material-icons left header-icon-genre">music_note</i>
            <span class="modal-title"></span>
        </h4>
        <div class="collection" id="songBrowserSongList"></div>
    </div>
    <div class="modal-footer">
        <a href="#!" id="addSearchResultToQueue" class="modal-action waves-effect waves-light btn-flat">
            Add all to queue
        </a>
        <a href="#!" class="modal-action modal-close waves-effect waves-light btn-flat">
            Close
        </a>
    </div>
</div>

<!-- (New) Song Browser Item Template -->
<div class="collection hidden" id="songBrowserRenderTargetTemplates">
    <a href="#!" class="collection-item" id="songBrowserItemTemplate">
        <span class="badge result-length">{{time}}</span>
        <i class="material-icons left">play_circle_filled</i>
        <span class="result-title">{{title}}</span>
    </a>
</div>

<script src="/public/js/custom/library.js"></script>
